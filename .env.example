# Environment Configuration Template
# Copy this file to .env.local and update with your values

# Environment (development | test | production)
APP_ENV=development
NODE_ENV=development

# Database
# For SQLite: DATABASE_URL="file:./dev.db"
# For PostgreSQL: DATABASE_URL="postgresql://user:password@localhost:5432/dbname"
DATABASE_PROVIDER="sqlite"
DATABASE_URL="file:./dev.db"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
AUTH_SECRET="your-secret-key-here"
NEXTAUTH_SECRET="your-secret-key-here"

# Google OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# AI Services
ANTHROPIC_API_KEY=""
OPENAI_API_KEY=""
GOOGLE_AI_API_KEY=""
OPENROUTER_API_KEY=""
USE_MOCK_AI="false"

# Cache Configuration
# CACHE_PROVIDER: "redis" | "memory"
CACHE_PROVIDER="memory"
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
DISABLE_REDIS="false"

# File Storage
# STORAGE_PROVIDER: "local" | "s3" | "azure"
STORAGE_PROVIDER="local"
FILE_STORAGE="local"
UPLOAD_DIR="./uploads"

# AWS S3 (if STORAGE_PROVIDER="s3")
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
S3_BUCKET_NAME=""

# Azure Blob Storage (if STORAGE_PROVIDER="azure")
AZURE_STORAGE_CONNECTION=""
AZURE_CONTAINER_NAME=""

# Email Service
# EMAIL_PROVIDER: "mock" | "sendgrid" | "smtp"
EMAIL_PROVIDER="mock"
EMAIL_FROM="noreply@example.com"
EMAIL_SERVER_HOST=""
EMAIL_SERVER_PORT=""
EMAIL_SERVER_USER=""
EMAIL_SERVER_PASSWORD=""
SENDGRID_API_KEY=""

# SMTP Settings
SMTP_HOST=""
SMTP_PORT=""
SMTP_SECURE=""
SMTP_USER=""
SMTP_PASS=""

# Authentication
MOCK_AUTH_ENABLED="false"

# Payment
# PAYMENT_PROVIDER: "mock" | "toss" | "stripe"
PAYMENT_PROVIDER="mock"
NEXT_PUBLIC_TOSS_CLIENT_KEY=""
TOSS_CLIENT_KEY=""
TOSS_SECRET_KEY=""
TOSS_WEBHOOK_SECRET=""

# Feature Flags
ENABLE_VBA_PROCESSING="true"
ENABLE_WEBSOCKET="false"
ENABLE_CACHE_WARMING="false"

# Application Settings
NEXT_PUBLIC_APP_URL="http://localhost:3000"
APP_URL="http://localhost:3000"
LOG_LEVEL="info"
ENCRYPTION_KEY=""

# Rate Limiting
RATE_LIMIT_WINDOW_MS="60000"
RATE_LIMIT_MAX_REQUESTS="60"

# AI Configuration
AI_TIER1_MODEL="gpt-3.5-turbo"
AI_TIER2_MODEL="gpt-4"
AI_CONFIDENCE_THRESHOLD="0.85"
AI_MAX_TOKENS_PER_REQUEST="4000"
AI_CACHE_TTL="3600"

# Monitoring (optional)
SENTRY_DSN=""
ENABLE_MONITORING="false"